// Elasticsearch 6.0 twitter index mapping (note only one type per index for this version)

// Copy and paste each command into the dev tools kibana console
// to create indexes with mappings for follows, tweets, and users

PUT follows
{
	"mappings": {
		"follow": {
			"properties": {
				"id": {
					"type": "integer"
				},

				"follower_id": {
					"type": "integer"
				},

				"followee_id": {
					"type": "integer"
				},

        "engagement_rating": {
          "type": "float"
        }
			}
		}
  }
}

PUT slimtweets
{
  "mappings": {
    "tweet": {
      "properties": {
        "id": {
          "type": "integer"
        },

        "author_id": {
          "type": "integer"
        },

        "created_at": {
          "type": "date",
          "format": "EEE MMM d kk:mm:ss ZZ yyyy"
        }
      }
    }
  }
}

PUT tweets
{ 
  "mappings": {
    "tweet": {
  
      "properties": {
        "id": {
          "type": "integer"
        },

        "user_id": {
          "type": "integer"
        },

        "created_at": {
          "type": "date",
          "format": "EEE MMM d kk:mm:ss ZZ yyyy"
        },

        "text": {
          "type": "text"
        },

        "favorited": {
          "type": "boolean"
        },

        "in_reply_to_screen_name": {
          "type": "boolean"
        },

        "in_reply_to_user_id": {
          "type": "integer"
        },

        "retweet_count": {
          "type": "integer"
        },

        "retweeted": {
          "type": "boolean"
        },

        "source": {
          "type": "text"
        },

        "truncated": {
          "type": "boolean"
        },

        "reply_count": {
          "type": "integer"
        },

        "favorite_count": {
          "type": "integer"
        },

        "possibly_sensitive": {
          "type": "boolean"
        },

        "user_following": {
          "type": "boolean"
        }
      }
    }
  }
}

